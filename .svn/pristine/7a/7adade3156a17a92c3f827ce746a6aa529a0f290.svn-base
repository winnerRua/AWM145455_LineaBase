                        if (oWF.ConsumeProxy)
                        {
                            //Consumir proxy.
                            var valProx = prox.ConsumeProxy(Request, Key, _config);
                            utiProxy.SaveLog(valProx, "1", Key, 1, _config);
                            var validar = miUtilerias.encontrarValorNodo(valProx, "Fault");
                            if (!string.IsNullOrEmpty(validar))
                            {
