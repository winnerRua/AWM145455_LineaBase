                        if (oWF.ConsumeAutorizador)
                        {
                            //Consumir autorizador
                            //var conAuto = auto.ConsumeAuthorizer(Request, _config, oError);
                            //utiProxy.SaveLog(conAuto, "1", Key, 1, _config);
                            //if (!string.IsNullOrEmpty(conAuto))
                            //{
